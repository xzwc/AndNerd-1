<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:listSelector">@drawable/list_background</item>
        <item name="android:indeterminateDrawable">@drawable/loading_anim</item>
        
    </style>

    <style name="SearchEdit" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/edit_text_light</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/btn_default_light</item>
        <item name="android:minWidth">64.0dip</item>
        <item name="android:minHeight">48.0dip</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/edit_text_light</item>
    </style>

    <style name="HotKeyword" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/midnight_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:indicatorLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="SearchHint">
        <item name="android:textColor">#ffaaaaaa</item>
    </style>

    <style name="DetailedText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/wet_asphalt</item>
        <item name="android:textSize">16sp</item>
    </style>
    
</resources>